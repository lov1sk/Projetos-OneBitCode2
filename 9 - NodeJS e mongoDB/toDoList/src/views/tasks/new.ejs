<section class="section">
  <div class="container">
    <h1 class="title size-4">Nova tarefa</h1>

    <form method="post" action="/<%= checklistId %>/tasks">
      <div class="field">
        <label class="label">Nome</label>
        <div class="control">
          <input
            class="input"
            type="text"
            name="task[name]"
            placeholder="Tarefa"
          />
        </div>
      </div>

      <button type="submit" class="button is-success">Salvar</button>
      <a href="" class="button">Cancelar</a>
    </form>
  </div>
</section>

